<div class="container-fluid p-0" style="background-color: white; max-width:97vw;">
  <div class="row" style="background-color: white;">
        <form class="col-sm-12 col-lg-4 py-3" action="<%= new_trip_path(@trip) %>">
          <div class="mb-3 pt-3" style="background-color: white; position: sticky; top: 7vh; z-index: 1; width:100%; box-shadow: rgba(0, 0, 0, 0.25) 0px 25px 25px -25px;">
            <h2 class="text-center font-weight-bold"><%= @trails.length %> trails <%= @trails.length > 0 ? params[:location] && params[:location] != "" ? "in " + params[:location].titlecase : "in the world" : "found" %></h2>
            <p class="text-center">Explore and find your next hike from the trails below</p>
            <hr>
          </div>
          <div class="text-center" style="padding: 20px 0; z-index: -1">
            <%= render @trails %>
          </div>
        </form>
      <div class="col-sm-12 col-lg-8 p-0">
        <div style="height: 8vh;"></div>
        <div id="map"
          style="width: 100%; height: 92vh; position: sticky; top: 8vh;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
  </div>
</div>
