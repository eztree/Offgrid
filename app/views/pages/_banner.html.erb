<div class="position-absolute banner-text" style="width:100%;">
    <div class="head text-white text-center mb-3 font-weight-bold" style="font-size: 3.2rem;">Go out exploring, get home safe</div>
      <div class="content text-white text-center mb-4" style="font-size: 1.3rem;">Tell us where you want to hike next and we'll take care of the details</div>
      <div class="d-flex justify-content-center form-group my-3">
        <%= form_tag trails_path, method: :get do %>
          <div class="d-flex justify-content-between">
            <%= text_field_tag :location,
              params[:location],
              class: "form-control",
              placeholder: "Find your next hiking destination",
              size: "52"
            %>
            <%= button_tag(type: "submit", class: "btn btn-success text-white") do %>
                <i class="fa fa-search"></i>
            <% end %>
          </div>
        <% end %>
      </div>
  </div>



<div class="parallax_group" id="group-1">
  <div class="parallax_layer base_layer"><%= image_tag "Sky.png", style:" transform: translateY(-10px);" %></div>
  <div class="parallax_layer mid_layer"><%= image_tag "mountain2.png", style:" transform: translateY(-10px);" %></div>
  <div class="parallax_layer mid_top_layer text-white" ><%= image_tag "Person.png", style:" transform: translateY(-10px);" %></div>
  <div class="parallax_layer mid_top_layer" style="background: linear-gradient(rgba(0,0,0,0) 80%, rgba(0,0,0,1) 100%);" ></div>
</div>
