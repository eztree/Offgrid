<div class="container-fluid" style="background-color: white;">
  <div class="row" style="background-color: white;">
        <form class="col-sm-12 col-lg-4 p-3" action="<%= new_trip_path(@trip) %>">
          <div class="p-3 m-2" style="background-color: white; position: sticky; top: 6vh; z-index: 1;">
            <h2 class="text-center"><%= @trails.count %> Trails <%= @trails.count > 0 ? params[:location] && params[:location] != "" ? "in " + params[:location] : "in the World" : "Found" %></h2>
            <div class="d-flex flex-row-reverse p-0">
              <%= link_to "Go Back", root_path, class: "btn btn-primary" %>
              <button class="btn btn-success mx-2" type="submit">Select</button>
            </div>
          </div>
          <div style="padding: 0; z-index: -1">
            <%= render @trails %>
          </div>
        </form>
      <div class="col-sm-12 col-lg-8 p-0">
        <div id="map"
          style="width: 100%; height: 94vh; position: sticky; top: 6vh;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
  </div>
</div>
