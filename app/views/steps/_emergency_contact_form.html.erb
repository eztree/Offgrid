<div class="container-form">
  <%= form_for @emergency_contact, url: wizard_path, method: :put, local: true do |form| %>
    <div class="form-group row">
      <%= form.label :name, "Name", class: "col-sm-5 col-form-label font-weight-bold text-right" %>
      <%= form.text_field :name, class: "col-sm-7 multi-step" %>
    </div>
    <div class="form-group row">
      <%= form.label :email, "Email", class: "col-sm-5 col-form-label font-weight-bold text-right" %>
      <%= form.text_field :email, class: "col-sm-7 multi-step" %>
    </div>
    <div class="form-group row">
      <%= form.label :phone_no, "Contact number", class: "col-sm-5 col-form-label font-weight-bold text-right" %>
      <%= form.text_field :phone_no, class: "col-sm-7 multi-step" %>
    </div>
    <div class="d-flex justify-content-center py-3 my-3">
      <div class="progress-container">
      <div class="progress" id="progress" style="width:100%"></div>
      <div class="circle active"></div>
      <div class="circle active"></div>
      <div class="circle active"></div>
      <% if request.referrer.match(/signup/) %>
        <div class="circle active"></div>
      <% end %>
    </div>
    <div id="button-next">
      <%= form.submit "Get plan", class: "btn btn-success rounded-pill" %>
    </div>
  <% end %>
</div>
