<div class="row w-100">
  <div class="col-6 text-white d-flex flex-column justify-content-center" id="sidebar-bg">
    <h2 class="side-text text-left font-weight-bold">Hold up! Time to sign up</h2>
    <h4 class="side-text-sub text-left font-weight-italic">Your details will be used to keep you safe.</h2>
  </div>

  <div class="col-6 container d-flex justify-content-center align-items-center" id="form-field">
    <div class="container mt-5">
      <% @user = User.new %>
      <%= form_for @user, url: wizard_path, method: :put do |form| %>
      <div class="form-group row">
        <%= form.label :first_name, "First name", class: "col-sm-6 col-form-label font-weight-bold" %>
        <%= form.text_field :first_name, class: "col-sm-6", required: true, autofocus: true %>
      </div>
      <div class="form-group row">
        <%= form.label :last_name, "Last name", class: "col-sm-6 col-form-label font-weight-bold" %>
        <%= form.text_field :last_name, class: "col-sm-6", required: true, autofocus: true %>
      </div>
      <div class="form-group row">
        <%= form.label :email, "Email", class: "col-sm-6 col-form-label font-weight-bold" %>
        <%= form.text_field :email, class: "col-sm-6", required: true, autofocus: true, input_html: { autocomplete: "email" }%>
      </div>
      <div class="form-group row">
        <%= form.label :phone_no, "Contact number", class: "col-sm-6 col-form-label font-weight-bold" %>
        <%= form.text_field :phone_no, class: "col-sm-6", required: true, autofocus: true %>
      </div>
      <div class="form-group row">
        <%= form.label :password, "Password", class: "col-sm-6 col-form-label font-weight-bold" %>
        <%= form.password_field :password, class: "col-sm-6", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="form-group row">
        <%= form.label :Password_confirmation, "Password confirmation", class: "col-sm-6 col-form-label font-weight-bold" %>
        <%= form.password_field :password_confirmation, class: "col-sm-6", required: true, input_html: { autocomplete: "new-password" } %>
      </div>
    </div>

      <div id="button-nav">
        <%= form.submit "Sign up", class: "btn btn-success ml-1" %>
      </div>
    <% end %>
  </div>
</div>
