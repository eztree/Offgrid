<div class="container mt-5">
  <%= form_for @emergency_contact, url: wizard_path, method: :put, local: true do |form| %>
    <div class="form-group row">
      <%= form.label :name, "Name", class: "col-sm-5 col-form-label font-weight-bold" %>
      <%= form.text_field :name, class: "col-sm-7" %>
    </div>
    <div class="form-group row">
      <%= form.label :email, "Email", class: "col-sm-5 col-form-label font-weight-bold" %>
      <%= form.text_field :email, class: "col-sm-7" %>
    </div>
    <div class="form-group row">
      <%= form.label :phone_no, "Contact number", class: "col-sm-5 col-form-label font-weight-bold" %>
      <%= form.text_field :phone_no, class: "col-sm-7" %>
    </div>

    <div id="button-nav">
      <%= link_to "Back", previous_wizard_path, class: "btn btn-dark" %>
      <%= form.submit "Get plan", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
