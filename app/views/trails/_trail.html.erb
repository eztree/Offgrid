<input type="radio"
       class="btn-check trail-select"
       style="appearance: none;"
       data-checkpoints="<%= trail.checkpoints_coordinates.to_json %>"
       name="trail_id"
       id="trail_<%= trail.id %>"
       value="<%= trail.id %>"
       autocomplete="off"
       required>
<label class="btn btn-light my-2 py-2" for="trail_<%= trail.id %>" style="width: 90%;">
  <div class="card container-fluid p-0 my-0">
    <div class="rounded d-flex justify-content-end align-items-end" style="background-image: url('https://media.timeout.com/images/105666541/750/562/image.jpg'); background-position: center; height: 144px; width:100%;">
      <div class="badge badge-pill m-1 <% if trail.tag_list[0] === "easy"%>badge-success<% elsif trail.tag_list[0] === "medium"%>badge-warning<% else %>badge-danger<% end %>"><%= trail.tag_list[0] %></div>
    </div>
    <div class="card-body text-left p-2">
      <h5 class="font-weight-bold mb-0"><%= trail.name %></h5>
      <p class="text-left m-0"><%= trail.location %></p>
      <div class="stars">
        <i class="fa fa-star rating-color"></i>
        <i class="fa fa-star rating-color"></i>
        <i class="fa fa-star rating-color"></i>
        <i class="fa fa-star rating-color"></i>
        <i class="fa fa-star"></i>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <p class="mb-0"><small>Length: <%= trail.route_distance %> â€¢ Est: <%= trail.time_needed %></small></p>
        <%= link_to "View Details", trail_path(trail), class:"btn btn-success" %>
      </div>
    </div>
  </div>
</label>
