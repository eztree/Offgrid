<div class="pt-2 mt-5 col-12">
  <div class="container">
    <div class="row">
      <div class="col-6">
        <h2>When do you want to go?</h2>
        <h2>How many of you are there?</h2>
      </div>
      <div class="col-6">
        <%= form_for @trip, url: wizard_path, method: :put, local: true do |form| %>
          <div class="d-flex">
            <%= form.label :start_date, "Start date" %>
            <%= form.date_field :start_date %>
          </div>
          <div class="d-flex">
            <%= form.label :no_of_people, "People" %>
            <%= form.number_field :no_of_people, in: 1..100 %>
          </div>
          <%= link_to "back", trails_path, class: "btn btn-info" %>
          <%= form.submit "next", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
