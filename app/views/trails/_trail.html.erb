<%= link_to trail_path(trail), style:"color: black; text-decoration: none;" do %>
  <div class="d-flex card container-fluid p-3">
    <div class="row">
      <div class="col-4">
        <div class="rounded" style="background-image: url('https://media.timeout.com/images/105666541/750/562/image.jpg'); background-position: center; height:100%">
        </div>
      </div>
      <div class="card-body col-8">
        <h5 class="card-title"><%= trail.name %></h5>
        <p class="card-text"><small><%= trail.description.truncate_words(30) %></small></p>
      </div>
    </div>
  </div>
<% end %>
