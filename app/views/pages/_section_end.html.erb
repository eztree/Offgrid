<div class="d-flex flex-column justify-content-center align-items-center" style="height:50vh;">
  <div class="container">

    <!--Carousel Wrapper-->
    <div id="carousel-with-slides" class="carousel slide carousel-multi-item" data-ride="carousel">

    <!--Controls-->
    <div class="text-right mb-3">
      <div>
        <a class="btn btn-outline-secondary mx-1 prev" href="#carousel-with-slides" data-slide="prev" title="Previous">
          <i class="fa fa-lg fa-chevron-left"></i>
        </a>
        <a class="btn btn-outline-secondary mx-1 next" href="#carousel-with-slides" data-slide="next" title="Next">
          <i class="fa fa-lg fa-chevron-right"></i>
        </a>
      </div>
    </div>

    <!--/.Controls-->

    <!--Slides-->
      <div class="carousel-inner mb-3" role="listbox">
    <!--First slide-->
        <div class="carousel-item active">
          <% trails.first(4).each do |trail| %>
            <div class="col-md-3" style="float:left">
              <div class="card mb-2" style="overflow:hidden; border:0; height:300px;">
                  <%= image_tag "https://images.unsplash.com/photo-1586115457457-b3753fe50cf1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1088&q=80", style:"object-fit:cover;", height:"50%", alt: "Sharks" %>
                  <div class="card-body">
                      <h5 class="card-title text-black"><strong><%= trail.name %></strong></h5>
                      <p class="text-black"><%= trail.location %></p>
                      <div class="text-black d-flex justify-content-between">
                        <p class="text-black"><%= trail.route_distance %></p>
                        <p class="text-black">Est. <%= trail.time_needed %></p>
                      </div>
                  </div>
              </div>
            </div>
          <% end  %>
        </div>
    <!--/.First slide-->

    <!--Second slide-->
        <div class="carousel-item">
          <% trails.sample(4).each do |trail| %>
            <div class="col-md-3" style="float:left">
              <div class="card mb-2" style="overflow:hidden; border:0; height:300px;">
              <%= image_tag "https://images.unsplash.com/photo-1559076948-db842bea853a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80", style:"object-fit:cover;", height:"50%", alt: "Scuba boy" %>
                <div class="card-body">
                <h5 class="card-title text-black"><strong><%= trail.name %></strong></h5>
                <p class="text-black"><%= trail.location %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
    <!--/.Second slide-->
      </div>
    <!--/.Slides-->


    <!--/.Carousel Wrapper-->
    </div>

  
  </div>
</div>
