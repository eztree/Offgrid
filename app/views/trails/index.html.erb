<div class="container-fluid" style="background-color: white;">
  <div class="row" style="background-color: white;">
      <div class="col-sm-12 col-lg-6">
        <div class="d-flex flex-column justify-content-center align-items-center" style="background-color: white; margin-bottom: 10vh; position: sticky; top: 10vh; z-index: 1;">
          <h2>Search Trails</h2>
          <form class="form-inline mb-3">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
        <div style="z-index: -1">
          <%= render @trails %>
        </div>
      </div>
      <div class="col-sm-12 col-lg-6">
        <div id="map"
          style="width: 100%; height: 90vh; position: sticky; top: 10vh;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
  </div>
</div>
