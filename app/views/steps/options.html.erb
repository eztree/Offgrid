<div class="container-mstep">
  <div class="content-left" id="options-bg">
    <h2 class="side-text">How will you eat and sleep on the hike?</h2>
    <h4 class="side-text-sub">This will affect your packing list!</h4>
    <div class="progress-container">
    <% if current_user.nil? %>
      <div class="progress" id="progress" style="width: 33.3333%;"></div>
    <% else %>
      <div class="progress" id="progress" style="width: 50%;"></div>
    <% end %>
      <div class="circle active"></div>
      <div class="circle active"></div>
      <div class="circle"></div>
    <% if current_user.nil? %>
      <div class="circle"></div>
    <% end %>
  </div>
  </div>
  <div class="content-right" id="form-field">
    <div class="container-form">
      <%= form_for @trip, url: wizard_path, method: :put do |form| %>
        <%= form.check_box :cooking, class: "iconbox", checked: false %>
        <%= form.label :cooking do %>
          <div class="clickable">
            <i class="fab fa-gripfire"></i>
            <p class>I'm cooking</p>
          </div>
        <% end %>
        <%= form.check_box :camping,  class: "iconbox" %>
        <%= form.label :camping do %>
          <div class="clickable">
            <i class="fas fa-campground"></i>
            <p>I'm camping</p>
          </div>
        <% end %>
        <div id="button-next">
          <%= form.submit "Next", class: "btn btn-success rounded-pill" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
