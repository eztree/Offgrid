<div class="row w-100">
  <div class="col-6 text-white d-flex flex-column justify-content-center mb-3" id="sidebar-bg">
    <h2 class="mt-5 side-text text-left font-weight-bold">Set your emergency contact</h2>
    <h4 class="side-text-sub text-left font-weight-italic">Assign a person who will receive your trip details in the event at a preset date and time if you donâ€™t report back as safe by the end of your hike.</h2>
    <p class="side-text-footer text-left">Learn more about emergency contacts <%= link_to 'here', '#', class: "link-style px-1 rounded" %>.</p>
  </div>

  <div class="col-6 d-flex flex-column justify-content-center" id="form-field">
    <% if current_user.emergency_contacts.present? %>
      <% @emergency_contacts = @user.emergency_contacts %>
      <%= render "emergency_contact_selector" %>
    <% else %>
      <% @emergency_contact = EmergencyContact.new(user: @user) %>
      <%= render "emergency_contact_form" %>
    <% end %>
  </div>
</div>
