<div class="d-flex flex-column justify-content-center align-items-center" style="height:50vh;">
  <div class="mx-2">

    <!--Carousel Wrapper-->
    <div id="carousel-with-slides" class="carousel slide carousel-multi-item" data-ride="false">

    <!--Controls-->
    <div class="text-right mb-3">
      <div>
        <a class="btn btn-outline-secondary mx-1 prev" href="#carousel-with-slides" data-slide="prev" title="Previous">
          <i class="fa fa-lg fa-chevron-left"></i>
        </a>
        <a class="btn btn-outline-secondary mx-1 next" href="#carousel-with-slides" data-slide="next" title="Next">
          <i class="fa fa-lg fa-chevron-right"></i>
        </a>
      </div>
    </div>

    <!--/.Controls-->

    <!--Slides-->
      <div class="carousel-inner mb-3" role="listbox">
    <!--First slide-->
        <div class="carousel-item active">
          <% trails.first(4).each do |trail| %>
            <div id="home-carousell-card" class="col-md-3" style="float:left">
              <div class="card mb-2 position-relative shadow-sm" style="overflow:hidden; border:0; height:300px">
                  <% trail.photo_url.nil? ? image_url = "https://media.timeout.com/images/105666541/750/562/image.jpg" : image_url = trail.photo_url %>
                  <%= image_tag image_url, style:"object-fit:cover;", height:"50%", alt: "Trail" %>
                  <div class="card-body d-flex flex-column rounded-lg">
                      <h5 class="font-weight-bold m-0"><%= trail.name %></h5>
                      <p class="text-left m-0"><%= trail.location %></p>
                      <div class="stars">
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star"></i>
                      </div>
                      <p class="mb-0"><small>Length: <%= trail.route_distance %> • Est: <%= trail.time_needed %></small></p>
                  </div>
              </div>
            </div>
          <% end  %>
        </div>
    <!--/.First slide-->

    <!--Second slide-->
        <div class="carousel-item">
          <% trails.sample(4).each do |trail| %>
            <div class="col-md-3" style="float:left;">
              <div class="card mb-2 position-relative shadow-sm" style="overflow:hidden; border:0; height:300px;">
                  <% trail.photo_url.nil? ? image_url = "https://media.timeout.com/images/105666541/750/562/image.jpg" : image_url = trail.photo_url %>
                  <%= image_tag image_url, style:"object-fit:cover;", height:"50%", alt: "Trail" %>
                  <div class="card-body d-flex flex-column rounded-lg">
                      <h5 class="font-weight-bold m-0"><%= trail.name %></h5>
                      <p class="text-left m-0"><%= trail.location %></p>
                      <div class="stars">
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star"></i>
                      </div>
                      <p class="mb-0"><small>Length: <%= trail.route_distance %> • Est: <%= trail.time_needed %></small></p>
                  </div>
              </div>
            </div>
          <% end %>
        </div>
    <!--/.Second slide-->
      </div>
    <!--/.Slides-->


    <!--/.Carousel Wrapper-->
    </div>


  </div>
</div>
